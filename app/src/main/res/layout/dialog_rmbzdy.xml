<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ashy_dark_dark" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="15dp"
            android:background="@mipmap/beijing"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/pay_top_rl"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentTop="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:text="自定义金额"
                    android:textColor="@color/black_light"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/dialog_rmbzdy_dim"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@mipmap/guanbi" />
            </RelativeLayout>

            <View
                android:id="@+id/pay_top_v"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/pay_top_rl"
                android:background="@color/ashy_dark_dark" />

            <RelativeLayout
                android:id="@+id/dialog_rmbzdy_rl"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@+id/pay_top_v" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:focusable="false"
                    android:focusableInTouchMode="true" >

                    <TextView
                        android:id="@+id/dialog_rmbzdy_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="金额(元)"
                        android:textColor="@color/black_light"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/dialog_rmbzdy_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/dialog_rmbzdy_tv"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="可输入1-200的整数"
                        android:inputType="number"
                        android:paddingLeft="5dp"
                        android:textColor="@color/huise"
                        android:textColorHint="@color/huise"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/dialog_rmbzdy_submit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/anniu" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>