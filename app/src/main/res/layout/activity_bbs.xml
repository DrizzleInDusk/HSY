<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tabvf4_diantai_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/head_back">

        <ImageView
            android:id="@+id/back_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/tabvf2_back" />

        <TextView
            android:id="@+id/jj_top_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="社区"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/bbs_build"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/build" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/bbs_mybbs"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/bbs_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="我的社区"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:src="@mipmap/bbs_more" />
            </RelativeLayout>

            <com.zm.hsy.myview.MyListView
                android:id="@+id/bbs_mybbs_viewp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:groupIndicator="@null" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/blue" />

            <RelativeLayout
                android:id="@+id/bbs_hotbbs"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/bbs_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="热门社区排行"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:src="@mipmap/bbs_more" />
            </RelativeLayout>

            <com.zm.hsy.myview.MyListView
                android:id="@+id/bbs_bbs_viewp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:groupIndicator="@null" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/blue" />

            <RelativeLayout
                android:id="@+id/bbs_hottopic"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/bbs_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="热帖排行"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:src="@mipmap/bbs_more" />
            </RelativeLayout>

            <com.zm.hsy.myview.MyListView
                android:id="@+id/bbs_bbs2_viewp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:groupIndicator="@null" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/blue" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>