<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/letter_details_back">

        <ImageView
            android:id="@+id/zhubo_share"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/zhubo_gengduo"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/letter_details_share" />

        <ImageView
            android:id="@+id/zhubo_gengduo"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/letter_details_baidian"/>

        <ImageView
            android:id="@+id/back_top"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/tabvf2_back" />

        <RelativeLayout
            android:id="@+id/head_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <com.zm.hsy.myview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/zhubo_head"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/user_headimg"
                app:riv_corner_radius="100dip"
                app:riv_oval="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/zhubo_top_rl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_rl"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/zhubo_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/zhubo_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/zhubo_nickname"
                android:padding="5dp"
                android:src="@mipmap/v"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/zhubo_blurb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zhubo_top_rl3"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@color/huise"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/zhubo_user_down"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/zhubo_blurb"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/more_down" />
    </RelativeLayout>

</LinearLayout>