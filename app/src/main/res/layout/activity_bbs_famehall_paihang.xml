<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:id="@+id/famehall_single_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/single_line" />

    <RelativeLayout
        android:id="@+id/famehall_paihang_rl1"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/famehall_paihang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="1"
            android:textSize="17dp" />

        <RelativeLayout
            android:id="@+id/head_rl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/famehall_paihang" >
            <com.zm.hsy.myview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/famehall_paihang_head"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@color/touming"
                android:scaleType="fitXY"
                app:riv_corner_radius="100dip"
                app:riv_oval="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/famehall_paihang_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/head_rl"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="排名第一"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/famehall_paihang_fens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/head_rl"
            android:background="@mipmap/fens" />

        <TextView
            android:id="@+id/famehall_paihang_fensnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/famehall_paihang_fens"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="123"
            android:textColor="@color/huise"
            android:textSize="10dp" />
    </RelativeLayout>

</LinearLayout>