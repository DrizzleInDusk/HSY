<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:id="@+id/sing_line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp" >

            <com.zm.hsy.myview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/zanguo_cover_iv"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/details_img3"
                app:riv_corner_radius="100dip"
                app:riv_oval="true" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/zanguo_ll"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/zanguo_audioname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="17"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/ashy_dark_dark"
                android:text="公主闯秦关预告片花"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/zanguo_nickname"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="by"
                android:textColor="@color/huise"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/zanguo_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/xiansanjiao" />

                <TextView
                    android:id="@+id/zanguo_playamount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="4.7万"
                    android:textColor="@color/huise"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/zanguo_iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/letter_details_time" />

                <TextView
                    android:id="@+id/zanguo_timelong_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="08:50"
                    android:textColor="@color/huise"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/zanguo_iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/letter_details_pinglun" />

                <TextView
                    android:id="@+id/zanguo_commentnumber_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="120"
                    android:textColor="@color/huise"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/zanguo_playstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="正在播放"
                    android:textColor="@color/appblue"
                    android:textSize="12dp" 
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="wrap_content"
            android:layout_height="70dp" >

            <ImageView
                android:id="@+id/zanguo_download_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="15dp"
                android:src="@mipmap/letter_details_download" />

            <TextView
                android:id="@+id/zanguo_addtime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="23天前"
                android:textColor="@color/huise"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>