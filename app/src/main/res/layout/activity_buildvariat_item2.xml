<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="活动内容："
        android:textColor="@color/black_light"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/layout_yuanjiao_ashy" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="0.5dp"
            android:background="@drawable/layout_yuanjiao" >

            <EditText
                android:id="@+id/content_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="top"
                android:hint="请输入活动内容"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/huise"
                android:textColorHint="@color/huise"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="15dp"
        android:background="@color/blue" />

    <RelativeLayout
        android:id="@+id/addphoto"
        android:layout_width="match_parent"
        android:layout_height="61dp" >

        <ImageView
            android:id="@+id/addphoto_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:src="@mipmap/addphoto" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/addphoto_img"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="添加宣传照片"
            android:textColor="@color/ashy"
            android:textSize="13dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photo_rl"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_height="80dp" >

        <ImageView
            android:id="@+id/photo_img"
            android:layout_width="80dp"
            android:layout_height="80dp" 
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"/>
    </RelativeLayout>

</LinearLayout>