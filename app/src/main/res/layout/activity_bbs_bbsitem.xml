<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topic_ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <View
            android:id="@+id/bbs_single_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/single_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/white" >

            <RelativeLayout
                android:id="@+id/head_rl"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp" >

                <com.zm.hsy.myview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/bbs_user_head"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:background="@color/touming"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="100dip"
                    app:riv_oval="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/bbs_user_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/head_rl"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text="熊孩子真烦！！！"
                android:textColor="@color/huise"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text="18小时前"
                android:textColor="@color/huise"
                android:textSize="10dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/bbs_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="13dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="熊孩子真烦！！！"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/bbs_topic_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="熊孩子真烦！！！"
            android:textColor="@color/black_light"
            android:textSize="11dp" />

        <LinearLayout
            android:id="@+id/bbs_item_picturell"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/bbs_topic_picture1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter"
                    android:paddingLeft="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/bbs_topic_picture2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="5dp"
                    android:scaleType="fitCenter"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/bbs_topic_picture3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="5dp"
                    android:scaleType="fitCenter" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/bbs_topic_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/bbs_topic_count"
                android:paddingBottom="9dp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:src="@mipmap/pinglun" />

            <TextView
                android:id="@+id/bbs_topic_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:text="2"
                android:textColor="@color/black_light"
                android:textSize="11dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>