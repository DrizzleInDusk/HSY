<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/head_back">

        <ImageView
            android:id="@+id/back_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/tabvf2_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="帮助中心"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bzll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="问题类型"
            android:textColor="@color/ashy_dark_dark"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/ziliao"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:drawableRight="@mipmap/back_icon"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="账号/资料"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/bofang"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/back_icon"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="播放"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/luzhi"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/back_icon"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="录制"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/banquan"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/back_icon"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="版权相关"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </LinearLayout>
    <include
        android:id="@+id/bangzhu1"
        layout="@layout/activity_bangzhu_item1"/>
</LinearLayout>