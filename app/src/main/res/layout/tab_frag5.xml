                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/myown_setting_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@mipmap/title_setup" />

                <ImageView
                    android:id="@+id/myown_share_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@mipmap/title_share_btn" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myown_top_rl2"
                android:layout_width="fill_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/myown_top_rl1" >

                <com.zm.hsy.myview.RoundedImageView
