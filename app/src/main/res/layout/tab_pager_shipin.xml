<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/blue"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/tiny"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@mipmap/shipin_img1" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@mipmap/shipin_play1" />

                <ImageView
                    android:id="@+id/tiny_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:src="@mipmap/shipin_img1_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tiny_img"
                    android:layout_toRightOf="@+id/tiny_img"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:text="微电影"
                    android:textColor="@color/white"
                    android:textSize="13dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/readily"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="0.7"
                android:background="@mipmap/shipin_img2" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@mipmap/shipin_play1" />

                <ImageView
                    android:id="@+id/readily_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:src="@mipmap/shipin_img2_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/readily_img"
                    android:layout_toRightOf="@+id/readily_img"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:text="随手拍"
                    android:textColor="@color/white"
                    android:textSize="13dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/recreation"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@mipmap/shipin_img3" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@mipmap/shipin_play2" />

                <ImageView
                    android:id="@+id/recreation_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingLeft="3dp"
                    android:paddingTop="6dp"
                    android:src="@mipmap/shipin_img3_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/recreation_img"
                    android:layout_toRightOf="@+id/recreation_img"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:text="娱乐"
                    android:textColor="@color/white"
                    android:textSize="13dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/health"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@mipmap/shipin_img4" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@mipmap/shipin_play2" />

                <ImageView
                    android:id="@+id/health_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingLeft="3dp"
                    android:paddingTop="6dp"
                    android:src="@mipmap/shipin_img4_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/health_img"
                    android:layout_toRightOf="@+id/health_img"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:text="健康"
                    android:textColor="@color/white"
                    android:textSize="13dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/business"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@mipmap/shipin_img5" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@mipmap/shipin_play2" />

                <ImageView
                    android:id="@+id/business_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingLeft="3dp"
                    android:paddingTop="6dp"
                    android:src="@mipmap/shipin_img5_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/business_img"
                    android:layout_toRightOf="@+id/business_img"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:text="财经"
                    android:textColor="@color/white"
                    android:textSize="13dp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/ashy_light" />

        <RelativeLayout
            android:id="@+id/shipin_music"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shipin_music_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:focusable="false"
                android:paddingLeft="25dp"
                android:src="@mipmap/shipin_music" />

            <TextView
                android:id="@+id/shipin_music_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/shipin_music_img"
                android:paddingLeft="20dp"
                android:text="音乐"
                android:textColor="@color/black_light"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/ashy_light" />

        <RelativeLayout
            android:id="@+id/shipin_education"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shipin_education_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:focusable="false"
                android:paddingLeft="25dp"
                android:src="@mipmap/shipin_education" />

            <TextView
                android:id="@+id/shipin_education_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/shipin_education_img"
                android:paddingLeft="20dp"
                android:text="教育"
                android:textColor="@color/black_light"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/ashy_light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="20dp"
            android:background="@color/ashy_light" />

        <RelativeLayout
            android:id="@+id/shipin_hsy"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shipin_hsy_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:focusable="false"
                android:paddingLeft="25dp"
                android:src="@mipmap/shipin_hsy" />

            <TextView
                android:id="@+id/shipin_hsy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/shipin_hsy_img"
                android:paddingLeft="20dp"
                android:text="慧思语专区"
                android:textColor="@color/black_light"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/ashy_light" />

        <RelativeLayout
            android:id="@+id/shipin_other"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shipin_other_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:focusable="false"
                android:paddingLeft="25dp"
                android:src="@mipmap/shipin_other" />

            <TextView
                android:id="@+id/shipin_other_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/shipin_other_img"
                android:paddingLeft="20dp"
                android:text="其他"
                android:textColor="@color/black_light"
                android:textSize="15sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>

</ScrollView>