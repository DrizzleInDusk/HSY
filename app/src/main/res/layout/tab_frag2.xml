<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/frag2_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/head_back"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/frag2_top_rl1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="推荐"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/frag2_top_tv1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frag2_top_rl2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="我的订阅"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/frag2_top_tv2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/frag2_top_rl3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="播放历史"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/frag2_top_tv3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@color/white" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabvf2_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/subscribe_cover"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:src="@mipmap/guangbo_item4_img1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/guangbo_item4_img1"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/subscribe_audioAlbumName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新鲜事"
                android:textColor="@color/ashy_dark_dark"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/subscribe_addtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="更新时间：1天前"
                android:textColor="@color/huise"
                android:textSize="8sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/subscribe_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/back_icon" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tabvf2_history_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/phs_history_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/phs_delete_tv"
                android:paddingRight="5dp"
                android:src="@mipmap/delete_img" />

            <TextView
                android:id="@+id/phs_delete_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="选择删除"
                android:textColor="@color/single_line"
                android:textSize="13dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/phs_history_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/phs_clear_tv"
                android:paddingRight="5dp"
                android:src="@mipmap/clear_img" />

            <TextView
                android:id="@+id/phs_clear_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="一键清空"
                android:textColor="@color/single_line"
                android:textSize="13dp" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zm.hsy.myview.MyListView
                android:id="@+id/tabvf2_dy_viewp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:groupIndicator="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/inform"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="请先登录"
        android:textColor="@color/black_light"
        android:textSize="20dp"
        android:visibility="gone" />

</LinearLayout>