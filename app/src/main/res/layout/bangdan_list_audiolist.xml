<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/blue"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/bangdan_audiolist"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="30dp"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/bangdan_audiolist_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=" "
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/relativeLayout1" >

            <ImageView
                android:id="@+id/bangdan_audiolist_img1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/rl2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bangdan_audiolist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bangdan_audiolist_blurb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:text=" "
                android:textColor="@color/huise"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/bangdan_list_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/rl2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/bolang" />

        <TextView
            android:id="@+id/bangdan_audiolist_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bangdan_list_tv3"
            android:layout_toRightOf="@+id/bangdan_list_tv3"
            android:singleLine="true"
            android:text="é›† "
            android:textColor="@color/huise"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/bangdan_audiolist_img2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/item_back_icon" />
    </RelativeLayout>

</LinearLayout>