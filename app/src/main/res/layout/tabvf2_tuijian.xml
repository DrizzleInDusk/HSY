<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/letter_tuijian_sl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/tabvf2_tuijian_menu" />

        <View
            android:id="@+id/single_title"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="@color/blue" />

        <RelativeLayout
            android:id="@+id/letter_tuijian_title"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/item_menu_play"
                android:singleLine="true" />

            <TextView
                android:id="@+id/jingxuan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/img1"
                android:singleLine="true"
                android:text="精选"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@mipmap/item_back_icon" />

            <TextView
                android:id="@+id/jingxuan_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="25dp"
                android:text="更多"
                android:textColor="@color/huise"
                android:textSize="12sp" />
        </RelativeLayout>

        <com.zm.hsy.myview.MyListView
            android:id="@+id/letter_jingxuan_viewp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:groupIndicator="@null" />

        <com.zm.hsy.myview.MyListView
            android:id="@+id/letter_tuijian_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:groupIndicator="@null" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white" >
        </RelativeLayout>
    </LinearLayout>

</ScrollView>