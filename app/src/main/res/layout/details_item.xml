<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp" >
            <com.zm.hsy.myview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/details_coverivi_iv"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:background="@color/touming"
                android:scaleType="fitXY"
                app:riv_corner_radius="100dip"
                app:riv_oval="true" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/details_ll"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/details_audioName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="公主闯秦关预告片花"
                android:textSize="13dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/details_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/xiansanjiao" />

                <TextView
                    android:id="@+id/details_playAmount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="4.7万"
                    android:textColor="@color/huise"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/details_iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/letter_details_time" />

                <TextView
                    android:id="@+id/details_timeLong_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="08:50"
                    android:textColor="@color/huise"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/details_iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/letter_details_pinglun" />

                <TextView
                    android:id="@+id/details_commentNumber_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="120"
                    android:textColor="@color/huise"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="wrap_content"
            android:layout_height="70dp" >

            <ImageView
                android:id="@+id/details_download_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="15dp"
                android:src="@mipmap/letter_details_download" />

            <TextView
                android:id="@+id/details_addtime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="23天前"
                android:textColor="@color/huise"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>